# *****************************************************************
# Problem size and geometry [length in cm]
# *****************************************************************
geometry.prob_lo     =  0.0  0.0  0.0 
geometry.prob_hi     =  1.8516e19  1.8516e19  1.8516e19
geometry.is_periodic =  0    0    0

# *****************************************************************
# VERBOSITY
# *****************************************************************
amr.v              = 0       # verbosity in Amr

# *****************************************************************
# Resolution and refinement
# *****************************************************************
amr.n_cell          = 128 128 128
amr.max_level       = 1     # number of levels = max_level + 1
amr.max_grid_size   = 32    # default
amr.blocking_factor = 8     # grid size must be divisible by this
amr.n_error_buf     = 3     # minimum 3 cell buffer around tagged cells

## grid_eff = 1 forces refinement to respect symmetries of the tagged cells
amr.grid_eff        = 0.7   # default

do_reflux = 1
do_subcycle = 0
